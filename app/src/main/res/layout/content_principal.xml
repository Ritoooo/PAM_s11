<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BuscarPersona"
    tools:showIn="@layout/activity_principal">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="310dp"
        android:id="@+id/LSTPERSONA"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TXTAPELLIDO"
        android:layout_above="@+id/BTNGRABAR"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/LSTPERSONA" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUSCAR"
        android:id="@+id/BTNGRABAR"
        android:layout_above="@+id/LSTPERSONA"
        android:layout_marginBottom="54dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGRESAR"
        android:id="@+id/BTNREGRESAR"
        android:layout_alignBottom="@+id/BTNGRABAR"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView4"
        android:layout_above="@+id/TXTAPELLIDO"
        android:layout_toLeftOf="@+id/BTNGRABAR"
        android:layout_alignTop="@+id/TXTAPELLIDO"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INGRESE  APELLIDO"
        android:id="@+id/textView5"
        android:layout_above="@+id/TXTAPELLIDO"
        android:layout_alignRight="@+id/TXTAPELLIDO"
        android:layout_alignParentLeft="true" />

</RelativeLayout>